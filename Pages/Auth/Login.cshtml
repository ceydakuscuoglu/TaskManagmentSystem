@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center mt-5">
    <div class="col-12 col-sm-10 col-md-6 col-lg-4">
        <div class="card shadow-sm">
            <div class="card-body p-4">
                <h1 class="h4 mb-3 text-center">Sign in</h1>
                <form method="post" class="vstack gap-3">
                    @Html.AntiForgeryToken()
                    <div>
                        <label class="form-label">Email</label>
                        <input asp-for="Input.Email" class="form-control" placeholder="name@example.com" />
                    </div>
                    <div>
                        <label class="form-label">Password</label>
                        <input asp-for="Input.Password" class="form-control" type="password" placeholder="••••••••" />
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Login</button>
                </form>
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger mt-3">@Model.ErrorMessage</div>
                }
            </div>
        </div>
    </div>
  </div>


